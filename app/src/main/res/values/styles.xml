<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--添加分割线颜色样式，如果不需要测删除就是系统自带的分割线样式-->
        <!--<item name= "android:listDivider">@drawable/divideritem </item >-->

    </style>

    <style name="textSizeNormal">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="textSizeBig">
        <item name="android:textSize">25sp</item>
    </style>

    <!--  基准TextView-->
    <style name="baseTextView">

        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@color/colorNormal</item>
        <item name="android:gravity">center</item>
    </style>

    <!--标准TextView-->
    <style name="normalTextView" parent="baseTextView">

    </style>

    <!--标准ImageView-->
    <style name="normalImageView">
        <item name="android:scaleType">fitXY</item>
    </style>

    <!--标准Button-->
    <style name="normalButton" parent="baseTextView">
        <item name="android:background">@drawable/btn_nomal</item>
    </style>

    <!--点击后字体为红色-->
    <style name="redTextButton">
        <item name="android:textSize" >15dp</item>

        <item name="android:textColor">@drawable/text_color_check</item>
    </style>

    <!--标准Edittext-->
    <style name="normalEdit" parent="baseTextView">
     <item name="android:background">@null</item>

    </style>

    <!--全屏的splash界面風格-->
    <style name="FullScreenStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!--透明状态栏-->
    <style name="toumingStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
    </style>



</resources>
