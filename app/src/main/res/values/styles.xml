<resources>

  <!--   Base application theme.
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
         Customize your theme here.
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        添加分割线颜色样式，如果不需要测删除就是系统自带的分割线样式
        <item name= "android:listDivider">@drawable/divideritem </item >
           </style>-->

        <!-- Base application theme. -->
        <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
            <!-- Customize your theme here. -->
            <item name="windowActionBar">false</item>
            <item name="windowNoTitle">true</item>
            <item name="colorPrimary">@color/colorPrimary</item>
            <item name="colorPrimaryDark">@color/colorPrimary</item>
            <item name="colorAccent">@color/colorPrimary</item>
            <item name="android:textColorHint">@color/white</item>
        </style>


    <!--自定义基类主题-->
    <style name="BaseLightTheme" parent="@style/Theme.AppCompat.Light">

    </style>
    <!--去掉actionbar的主題-->
    <style name="NoActionBarTheme" parent="BaseLightTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <!--全屏主題-->
    <style name="FullScreenTheme" parent="NoActionBarTheme">
        <item name="android:windowFullscreen">true</item>
    </style>
    <!-- 全透明的背景 -->
    <style name="TransparentTheme" parent="FullScreenTheme">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
    <!--使用背景图片解决开启app瞬间白屏的问题,原来打算使用透明色,但是响应还是慢-->
    <style name="SplashTheme" parent="FullScreenTheme">
        <item name="android:windowBackground">@mipmap/splash_3</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <style name="textSizeNormal">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="textSizeBig">
        <item name="android:textSize">25sp</item>
    </style>

    <!--  基准TextView-->
    <style name="baseTextView">

        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@color/colorNormal</item>
        <item name="android:gravity">center</item>
    </style>

    <!--标准TextView-->
    <style name="normalTextView" parent="baseTextView">

    </style>

    <!--标准ImageView-->
    <style name="normalImageView">
        <item name="android:scaleType">fitXY</item>
    </style>

    <!--标准Button-->
    <style name="normalButton" parent="baseTextView">
        <item name="android:background">@drawable/btn_nomal</item>
    </style>

    <!--点击后字体为红色-->
    <style name="redTextButton">
        <item name="android:textSize" >15dp</item>

        <item name="android:textColor">@drawable/text_color_check</item>
    </style>

    <!--标准Edittext-->
    <style name="normalEdit" parent="baseTextView">
     <item name="android:background">@null</item>

    </style>

    <!--全屏的splash界面風格-->
    <style name="FullScreenStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!--透明状态栏-->
    <style name="toumingStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
    </style>



</resources>
