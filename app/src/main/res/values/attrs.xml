<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="AmountView">
        <!-- 左右2边+-按钮的宽度 -->
        <attr name="btnWidth" format="dimension" />
        <!-- 中间TextView的宽度 -->
        <attr name="tvWidth" format="dimension" />
        <!--<attr name="tvColor" format="color"/>-->
        <attr name="tvTextSize" format="dimension"/>
        <attr name="btnTextSize" format="dimension"/>
    </declare-styleable>

    <!--我的资料自定义item-->
    <declare-styleable name="MyMaterialItem">
        <attr name="materialText" format="string"/>
        <attr name="materialText2" format="string" />
        <!--指定是否有图标>-->
        <attr name="materialToggle" format="boolean"/>
    </declare-styleable>
    <declare-styleable name="TitleBar">
        <attr name="aTitle" format="string"/>
        <attr name="aIcon" format="reference"/>
    </declare-styleable>
</resources>
