<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:touxiang="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_marginTop="5dp"
              android:layout_height="110dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="@color/white">

        <!--首页personnal条目左边视图-->
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_first_item_person_topleft"
                android:layout_width="105dp"
                android:layout_height="90dp"
                android:layout_marginLeft="17dp"
                android:scaleType="fitXY"
                android:src="@mipmap/home_img_logo"
                />
        </RelativeLayout>

        <!--首页person条目右边视图-->


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_weight="1">

            <com.itheima.roundedimageview.RoundedImageView
                android:id="@+id/iv_first_item_person_topright"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="54.7dp"
                android:layout_marginTop="10dp"
                android:scaleType="fitXY"
                android:src="@mipmap/first_page_person_icon_touxiang"
                touxiang:riv_oval="true"
                touxiang:riv_border_width="0dp"/>
            <TextView
                android:id="@+id/tv_first_list_user_name"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_first_item_person_topright"
                android:gravity="center_horizontal"
                android:layout_alignParentRight="true"
                android:layout_marginTop="6dp"
                android:layout_marginRight="50dp"
                android:maxLines="1"
                android:textColor="@color/zitiblack"
                android:textSize="13sp"
                android:text="用户名"/>


            <ImageView
                android:id="@+id/tv_first_page_person_tel"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20.3dp"
                android:layout_below="@id/tv_first_list_user_name"
                android:src="@mipmap/home_btn_phone"/>

            <ImageView
                android:id="@+id/tv_first_page_shanjiajieshao"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@id/tv_first_list_user_name"
                android:layout_toLeftOf="@id/tv_first_page_person_tel"
                android:layout_marginRight="7.3dp"
                android:src="@mipmap/home_btn_ppjs"/>

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>