<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
    android:background="@color/graywhite">
        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/iv_first_list_title"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/home_banner_cb"/>
        <!--首页列表条目布局-->
<LinearLayout
    android:layout_marginTop="5dp"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/layout_first_list_left"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="2.5dp"
            android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_first_list_left"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:src="@mipmap/home_soldout_bg"
                    android:background="@drawable/first_biankuan_bj"/>
                <TextView
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:layout_marginTop="7dp"
                    android:layout_marginBottom="4dp"
                    android:textSize="13sp"
                    android:textColor="@color/zitiblack"
                    android:id="@+id/tv_first_list_left_name"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:maxLines="1"/>
                <TextView
                    android:layout_gravity="center_horizontal"
                    android:textSize="13sp"
                    android:textColor="@color/colorRed"
                    android:id="@+id/tv_first_list_left_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_first_list_mid"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="2.5dp"
            android:layout_marginRight="2.5dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_first_list_mid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:src="@mipmap/home_soldout_bg"
                    android:background="@drawable/first_biankuan_bj"
                    />
                <TextView
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:layout_marginTop="7dp"
                    android:layout_marginBottom="4dp"
                    android:textSize="13sp"
                    android:textColor="@color/zitiblack"
                    android:id="@+id/tv_first_list_mid_name"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:maxLines="1"/>
                <TextView
                    android:layout_gravity="center_horizontal"
                    android:textSize="13sp"
                    android:textColor="@color/colorRed"
                    android:id="@+id/tv_first_list_mid_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_first_list_right"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="2.5dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_first_list_right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:src="@mipmap/home_soldout_bg"
                    android:background="@drawable/first_biankuan_bj"/>
                <TextView
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:layout_marginTop="7dp"
                    android:layout_marginBottom="4dp"
                    android:textSize="13sp"
                    android:textColor="@color/zitiblack"
                    android:id="@+id/tv_first_list_right_name"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:maxLines="1"/>
                <TextView
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:textSize="13sp"
                    android:textColor="@color/colorRed"
                    android:id="@+id/tv_first_list_right_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"/>
        </LinearLayout>

</LinearLayout>





</LinearLayout>