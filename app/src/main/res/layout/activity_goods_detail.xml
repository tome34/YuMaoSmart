            <!--产品参数-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@color/graywhite"
                android:orientation="vertical">
                <TextView
                    android:layout_marginLeft="10dp"
                    android:text="商品参数"
                    android:textColor="@color/colorNormal"
                    android:textSize="20dp"
                    android:id="@+id/tv_activity_goods_goodsparamater"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="center_vertical"
                    android:background="@color/white"/>
                <TextView
                    android:layout_marginTop="1dp"
                    android:layout_marginLeft="10dp"
                    android:text="条码:"
                    style="@style/normalTextView"
                    android:id="@+id/tv_activity_goods_line_code"
                    android:layout_width="match_parent"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:layout_height="35dp"/>

                <TextView
                    android:layout_marginTop="1dp"
                    android:layout_marginLeft="10dp"
                    android:text="工期:"
                    style="@style/normalTextView"
                    android:id="@+id/tv_activity_goods_work_duration"
                    android:layout_width="match_parent"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:layout_height="35dp"
                    />

                <TextView
                    android:layout_marginTop="1dp"
                    android:layout_marginLeft="10dp"
                    android:text="发货仓"
                    style="@style/normalTextView"
                    android:id="@+id/tv_activity_goods_warehouse_address"
                    android:layout_width="match_parent"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:layout_height="35dp"/>
                <TextView
                    android:layout_marginTop="1dp"
                    android:layout_marginLeft="10dp"
                    style="@style/normalTextView"
                    android:text="描述"
                    android:id="@+id/tv_activity_goods_full_description"
                    android:layout_width="match_parent"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:layout_height="35dp"/>
                <!--包裹recyclerview,为了不让他滑动-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:descendantFocusability="blocksDescendants">
              <android.support.v7.widget.RecyclerView
                  android:id="@+id/rv_specifications"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">

              </android.support.v7.widget.RecyclerView>
                </RelativeLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_marginTop="1dp"
                android:orientation="vertical">
            <TextView
                android:text="商品详情"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:textSize="20dp"
                android:textColor="@color/colorNormal"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:layout_height="35dp"/>
            </LinearLayout>

            <!--包裹recyclerview,为了不让他滑动-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:descendantFocusability="blocksDescendants">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_pictures"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </android.support.v7.widget.RecyclerView>
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_activity_goods_detail_address"
                style="@style/normalTextView"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </ScrollView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/graywhite">
        <ImageView
            android:id="@+id/detail_activity_collection_iv"
            style="@style/normalTextView"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="0.2dp"
            android:padding="10dp"
            android:src="@mipmap/details_icon_sc"
            android:background="@color/white"/>
        <ImageView

            android:id="@+id/detail_activity_forward_iv"
            style="@style/normalTextView"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="0.2dp"
            android:padding="10dp"
            android:src="@mipmap/details_icon_zf"
            android:background="@color/white"/>
        <Button
            android:textSize="15dp"
            android:id="@+id/detail_activity_shoppingcard_bt"
            android:text="加入购物车"
            android:textColor="@color/white"
            style="@style/normalTextView"
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/black"/>
        <Button
            android:textSize="18dp"
            android:id="@+id/detail_activity_get_it_now_bt"
            android:text="立即购买"
            style="@style/normalTextView"
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/colorRed"/>

    </LinearLayout>
</LinearLayout>
