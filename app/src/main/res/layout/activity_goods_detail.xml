<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_goods_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.yumao.yumaosmart.activity.GoodsDetailActivity">

<include layout="@layout/item_toolbar"></include>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/graywhite"
            android:orientation="vertical"
            >

           <!-- <android.support.v4.view.ViewPager
                android:id="@+id/vp_activity_goods_detail_top"
                android:layout_width="match_parent"
                android:layout_height="200dp"
               />-->

            <com.youth.banner.Banner
                android:id="@+id/banner"
                android:layout_width="match_parent"
                android:layout_height="300dp" />


            <!--商品简介-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:padding="5dp">

                <TextView
                    android:id="@+id/tv_activity_goods_detail_goodsname"
                    style="@style/normalTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="18K蓝宝石吊坠"/>

                <TextView
                    android:id="@+id/tv_activity_goods_detail_goodsprice"
                    style="@style/normalTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_activity_goods_detail_goodsname"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/colorRed"
                    android:text="价格:1150"/>
                <ImageView
                    android:id="@+id/details_icon_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/details_icon_share"/>

            </RelativeLayout>

            <!--商品承诺-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical">

            <ImageView
                style="@style/normalImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/white"
                android:src="@mipmap/details_icon_annotation"/>
            </LinearLayout>

            <!--商品总价-->
            <RelativeLayout
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_height="50dp"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_centerVertical="true"
                    android:id="@+id/tv_activity_goods_detail_totalprice_title"
                    style="@style/normalTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="总价:"/>

                <TextView

                    android:layout_centerVertical="true"
                    android:id="@+id/tv_activity_goods_detail_totalprice"
                    style="@style/normalTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/tv_activity_goods_detail_totalprice_title"
                    android:text="￥ 9999"
                    android:textColor="@color/colorRed"/>

                <TextView
                    android:layout_centerVertical="true"
                    android:id="@+id/tv_activity_goods_detail_totalprice_ifcontains_delivery"
                    style="@style/normalTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/tv_activity_goods_detail_totalprice"
                    android:text="(不含运费)"/>

                <com.yumao.yumaosmart.widgit.AmountView
                    android:id="@+id/amount_view"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    app:btnTextSize="14sp"
                    app:btnWidth="36dp"
                    app:tvWidth="30dp"/>
            </RelativeLayout>

