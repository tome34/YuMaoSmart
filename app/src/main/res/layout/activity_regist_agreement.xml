<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_regist_agreement"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.yumao.yumaosmart.activity.RegistAgreementActivity">

    <include layout="@layout/item_toolbar"></include>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:background="@color/graywhite"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:background="@mipmap/regist1"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:background="@mipmap/regist2"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:background="@mipmap/regist2"/>

    </LinearLayout>

</ScrollView>

</LinearLayout>
