<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main3"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yumao.yumaosmart.activity.ConfirmOrderActivity">
    <include layout="@layout/item_toolbar" android:id="@+id/toolbar_activity_confirm_order"></include>
    <ScrollView
        android:layout_below="@id/toolbar_activity_confirm_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="66dp">
                <ImageView
                    android:id="@+id/iv_activity_confirm_title_logo"
                    android:src="@mipmap/activity_confirm_order_logo"
                    style="@style/normalImageView"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>
                <TextView
                    android:id="@+id/tv_activity_confirm_order_name"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/iv_activity_confirm_title_logo"
                    style="@style/normalTextView"
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_activity_confirm_order_phone"
                    android:layout_marginTop="10dp"
                    android:layout_centerHorizontal="true"
                    style="@style/normalTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_alignParentBottom="true"
                    android:id="@+id/tv_activity_confirm_order_address"
                    android:layout_marginBottom="10dp"
                    android:layout_toRightOf="@id/iv_activity_confirm_title_logo"
                    style="@style/normalTextView"
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:id="@+id/iv_activity_confirm_order_personinfo"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dp"
                    style="@style/normalImageView"
                    android:src="@mipmap/activity_myaddress_send_area"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_marginTop="2dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="130dp">

                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                    <ImageView
                        android:id="@+id/iv_activity_confirm_sendmethod"
                        android:src="@mipmap/activity_goods_standard_fenleizhi"
                        style="@style/normalImageView"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="5dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>
                    <TextView
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:layout_toLeftOf="@id/iv_activity_confirm_sendmethod"
                        style="@style/normalTextView"
                        android:layout_marginRight="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        style="@style/normalTextView"
                        android:text="配送方式"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>

                <RadioGroup
                    android:orientation="vertical"
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                    <RadioButton
                        android:layout_marginLeft="10dp"
                        android:id="@+id/rbtn_activity_confirm_order_first"
                        android:layout_marginRight="5dp"
                        android:drawableRight="@drawable/shopping_card_title_rbtn"
                        android:button="@null"
                        android:text="顺丰快递"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"/>
                    <RadioButton
                        android:layout_marginLeft="10dp"
                        android:id="@+id/rbtn_activity_confirm_order_second"
                        android:layout_marginRight="5dp"
                        android:drawableRight="@drawable/shopping_card_title_rbtn"
                        android:button="@null"
                        android:text="圆通快递"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"/>
                </RadioGroup>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <TextView
                    style="@style/normalTextView"
                    android:text="商品列表"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:id="@+id/iv_activity_confirm_order_orderlist"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dp"
                    style="@style/normalImageView"
                    android:src="@mipmap/activity_goods_standard_fenleizhi"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>
            </RelativeLayout>
            <com.yumao.yumaosmart.widgit.FirstListView
                android:id="@+id/lv_activity_confirm_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </com.yumao.yumaosmart.widgit.FirstListView>

            <LinearLayout
                android:layout_marginTop="2dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="96dp">
                <RelativeLayout
                    android:paddingLeft="10dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                    <TextView

                        android:text="支付方式"
                        style="@style/normalTextView"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:id="@+id/iv_activity_confirm_paymethod"
                        android:src="@mipmap/activity_goods_standard_fenleizhi"
                        style="@style/normalImageView"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="5dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>
                    <TextView
                        android:text="微信支付"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:layout_toLeftOf="@id/iv_activity_confirm_paymethod"
                        style="@style/normalTextView"
                        android:layout_marginRight="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginTop="2dp"
                    android:paddingLeft="10dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                    <ImageView
                        android:src="@mipmap/activity_confirm_paymethod_logo_weixin"
                        android:id="@+id/iv_activity_confirm_order_paymethod_logo"
                        style="@style/normalImageView"
                        android:layout_marginLeft="10dp"
                        android:layout_centerVertical="true"
                        android:layout_width="35dp"
                        android:layout_height="35dp"/>
                    <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/iv_activity_confirm_order_paymethod_logo"
                        android:id="@+id/tv_activity_confirm_order_paymethod_text"
                        style="@style/normalTextView"
                        android:layout_centerVertical="true"
                        android:text="微信支付"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <RadioButton
                        android:id="@+id/rbtn_activity_confirm_order_paymethod"
                        android:layout_marginRight="5dp"
                        android:drawableRight="@drawable/shopping_card_title_rbtn"
                        android:button="@null"
                        android:layout_alignParentRight="true"
                        android:layout_weight="1"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>
                </RelativeLayout>
            </LinearLayout>
            <RelativeLayout
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="90dp">
                <TextView
                    android:text="留言备注"
                    android:id="@+id/tv_activity_confirm_order_message"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    style="@style/normalTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <EditText

                    android:background="@null"
                    android:gravity="left"
                    android:hint="订单备注,25字以内"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="10dp"
                    android:layout_below="@id/tv_activity_confirm_order_message"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"/>
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        >
        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/tv_activity_confirm_order_payment_title"
            android:text="实付款:"
            style="@style/normalTextView"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_activity_confirm_order_payment_title"
            android:id="@+id/tv_activity_confirm_order_payment"

            style="@style/normalTextView"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btn_activity_confirm_order_postorder"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:text="提交订单"
            android:textColor="@color/colorLight"
            android:background="@color/colorRed"
            android:layout_width="wrap_content"
            android:layout_height="50dp"/>
    </RelativeLayout>
</RelativeLayout>