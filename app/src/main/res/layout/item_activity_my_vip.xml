<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
                android:layout_margin="10dp"
              android:layout_width="match_parent"
              android:layout_height="66dp">
<ImageView
    android:layout_marginLeft="5dp"
    android:layout_centerVertical="true"
    android:src="@mipmap/first_page_person_icon_touxiang"
    android:id="@+id/iv_item_activity_my_vip"
    style="@style/normalImageView"
    android:layout_width="45dp"
    android:layout_height="45dp"/>
    <TextView
        android:layout_marginLeft="10dp"
        android:text="会员昵称"
        style="@style/normalTextView"
        android:id="@+id/tv_item_activity_my_vip_petname"
        android:layout_toRightOf="@id/iv_item_activity_my_vip"
        android:layout_alignTop="@id/iv_item_activity_my_vip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginLeft="10dp"
        android:text="加入时间:"
        style="@style/normalTextView"
        android:textSize="12dp"
        android:id="@+id/tv_item_activity_my_vip_enter_time"
        android:layout_toRightOf="@id/iv_item_activity_my_vip"
        android:layout_below="@id/tv_item_activity_my_vip_petname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginLeft="10dp"
        android:text="2017-1-1"
        style="@style/normalTextView"
        android:id="@+id/tv_item_activity_my_vip_time"
        android:layout_toRightOf="@id/tv_item_activity_my_vip_enter_time"
        android:layout_alignTop="@id/tv_item_activity_my_vip_enter_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginLeft="10dp"
        android:text="订单数量:"
        style="@style/normalTextView"
        android:textSize="12dp"
        android:id="@+id/tv_item_activity_my_vip_ordernum"
        android:layout_toRightOf="@id/iv_item_activity_my_vip"
        android:layout_below="@id/tv_item_activity_my_vip_enter_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginLeft="10dp"
        android:text="20单"
        style="@style/normalTextView"
        android:id="@+id/tv_item_activity_my_vip_num"
        android:layout_toRightOf="@id/tv_item_activity_my_vip_ordernum"
        android:layout_alignTop="@id/tv_item_activity_my_vip_ordernum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        style="@style/normalImageView"
        android:layout_centerVertical="true"
        android:src="@mipmap/iv_activity_my_employee_getted_detail"
        android:layout_width="30dp"
        android:layout_height="30dp"/>
</RelativeLayout>