<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:touxiang="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/layout_mymaterial_touxiong"
                android:orientation="vertical"
                android:layout_centerVertical="true"
              android:layout_width="match_parent"
              android:layout_height="65dp">
<TextView
    android:id="@+id/tv_mymaterial_title"
    android:textColor="@color/colorNormal"
    android:gravity="center_vertical"
    android:text="头像"
    android:layout_marginLeft="10dp"
    android:textSize="13sp"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    />
  <com.itheima.roundedimageview.RoundedImageView
      android:layout_centerVertical="true"
      android:layout_marginRight="35dp"
      android:id="@+id/iv_my_material_touxiang"
      android:layout_alignParentRight="true"
      android:layout_width="50dp"
      android:layout_height="50dp"
      tools:src="@mipmap/first_page_person_icon_touxiang"
      touxiang:riv_oval="true"
      touxiang:riv_border_width="0dp"/>

    <ImageView
        android:scaleType="fitXY"
        android:layout_marginRight="5dp"
        android:layout_width="30dp"
        android:src="@mipmap/my_material_jump"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"/>

  <View
      android:layout_width="match_parent"
      android:layout_height="0.5dp"
      android:layout_alignParentBottom="true"
      android:layout_marginLeft="10dp"
      android:background="@color/hint_gray"/>

</RelativeLayout>