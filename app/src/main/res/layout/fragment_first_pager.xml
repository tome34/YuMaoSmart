<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              xmlns:touxiang="http://schemas.android.com/apk/res-auto"
              xmlns:app="http://schemas.android.com/tools"
              android:background="@color/graywhite"
              android:orientation="vertical">



    <SearchView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorNormal">
    </SearchView>

    <com.yumao.yumaosmart.widgit.MyScrollview
        android:id="@+id/first_scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/include_frist_title"/>

            <!--首页图片模块-->
           <!-- <android.support.v4.view.ViewPager
                android:id="@+id/vp_fragment_firstager"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="143dp"/>-->

            <com.youth.banner.Banner
                android:id="@+id/banner"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="180dp" />


            <!--首页分类RecyclereView模块-->
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_first_classify"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:layout_height="147dp">
            </android.support.v7.widget.RecyclerView>
            <!--首页展示RecyclerView模块-->
            <com.yumao.yumaosmart.widgit.FirstListView
                android:id="@+id/lv_first_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </com.yumao.yumaosmart.widgit.FirstListView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_qyzs"/>
                <TextView
                    android:id="@+id/tv_first_text"
                    android:layout_marginBottom="15dp"
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="地址: 深圳市罗湖区田贝四路水贝万山A座4006玉猫平台提供支持"/>

            </LinearLayout>

        </LinearLayout>

    </com.yumao.yumaosmart.widgit.MyScrollview>

</LinearLayout>