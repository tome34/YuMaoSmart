<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <SearchView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorNormal">
    </SearchView>
    <!--下拉刷新-->
    <in.srain.cube.views.ptr.PtrClassicFrameLayout
        xmlns:cube_ptr="http://schemas.android.com/apk/res-auto"
        android:id="@+id/ultra_ptr_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/graywhite"
        cube_ptr:ptr_duration_to_close="200"
        cube_ptr:ptr_duration_to_close_header="1000"
        cube_ptr:ptr_keep_header_when_refresh="true"
        cube_ptr:ptr_pull_to_fresh="false"
        cube_ptr:ptr_ratio_of_header_height_to_refresh="1.2"
        cube_ptr:ptr_resistance="1.7"

        >

    <ScrollView
        android:id="@+id/first_scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/graywhite"
            android:orientation="vertical">

            <include layout="@layout/include_frist_title"/>

            <!--首页图片模块-->
           <!-- <android.support.v4.view.ViewPager
                android:id="@+id/vp_fragment_firstager"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="143dp"/>-->

            <com.youth.banner.Banner
                android:id="@+id/banner"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="180dp" />

            <!--包裹recyclerview,为了不让他滑动-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:descendantFocusability="blocksDescendants">
            <!--首页分类RecyclereView模块-->
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_first_classify"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_height="170dp">
            </android.support.v7.widget.RecyclerView>

            </RelativeLayout>

            <!--首页展示RecyclerView模块-->
            <!--<com.yumao.yumaosmart.widgit.FirstListView
                android:id="@+id/lv_first_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </com.yumao.yumaosmart.widgit.FirstListView>-->
            <!--包裹recyclerview,为了不让他滑动-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:descendantFocusability="blocksDescendants">
            <!--首页分类RecyclereView模块-->
            <android.support.v7.widget.RecyclerView
                android:id="@+id/lv_first_list"
                android:layout_width="match_parent"
                android:background="@color/graywhite"
                android:layout_height="wrap_content">
            </android.support.v7.widget.RecyclerView>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_qyzs"/>
                <TextView
                    android:id="@+id/tv_first_text"
                    android:layout_marginBottom="15dp"
                    android:layout_width="260dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="地址: 深圳市罗湖区田贝四路水贝万山A座4006玉猫平台提供支持"
                    android:textColor="@color/gray"
                    android:textSize="12sp"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    </in.srain.cube.views.ptr.PtrClassicFrameLayout>

</LinearLayout>