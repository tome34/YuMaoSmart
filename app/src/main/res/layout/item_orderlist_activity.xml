<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="140dp"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <RadioButton
            android:id="@+id/rbtn_item_orderlist_isselected"
            android:button="@null"
            android:background="@drawable/shopping_card_title_rbtn"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
        <TextView
            android:layout_marginLeft="35dp"
            style="@style/normalTextView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="订单编号:"/>

        <TextView
            android:id="@+id/tv_item_orderlist_serialnumber"
            android:layout_marginLeft="100dp"
            style="@style/normalTextView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/tv_item_orderlist_orderstate"
            android:gravity="center"
            android:text="待付款"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:textColor="@color/colorRed"/>

    </RelativeLayout>

    <LinearLayout
        android:padding="12dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="90dp">
      <ImageView
          android:src="@mipmap/ic_launcher"
          android:id="@+id/iv_item_orderlist_goods"
          android:layout_width="60dp"
          android:layout_height="60dp"/>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_marginLeft="5dp"
                android:layout_marginTop="3dp"
                android:src="@mipmap/ic_launcher"
                android:id="@+id/iv_item_orderlist_goods_logo"
                style="@style/normalImageView"
                android:layout_width="20dp"
                android:layout_height="20dp"/>
            <TextView
                style="@style/normalTextView"

                android:id="@+id/tv_item_orderlist_goods_mallname"
                android:layout_marginLeft="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="soew"
                android:layout_alignParentRight="true"
                style="@style/normalTextView"
                android:id="@+id/item_orderlist_goodsnumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_item_orderlist_goods_detail"
                style="@style/normalTextView"
                android:layout_below="@id/tv_item_orderlist_goods_mallname"
                android:layout_marginLeft="5dp"

                android:layout_width="wrap_content"
                android:layout_height="30dp"/>
            <TextView

                android:layout_marginLeft="5dp"
                android:layout_below="@id/tv_item_orderlist_goods_detail"
                style="@style/normalTextView"
                android:textColor="@color/colorRed"
                android:id="@+id/tv_item_orderlist_goods_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="30dp">
        <TextView
            android:textColor="@color/colorNormal"
            android:text="pw3eo323"
            android:id="@+id/tv_item_orderlist_total"
            android:textSize="15dp"
            android:layout_centerVertical="true"
            android:gravity="right"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
           android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </RelativeLayout>
</LinearLayout>