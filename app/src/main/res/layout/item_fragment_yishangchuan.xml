<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="70dp">
<RadioButton
    android:layout_centerVertical="true"
    android:id="@+id/rbtn_item_fragment_yishangjia"
    android:button="@null"
    android:background="@drawable/shopping_card_title_rbtn"
    android:layout_width="20dp"
    android:layout_height="20dp"/>
<ImageView
    android:src="@mipmap/ic_launcher"
    style="@style/normalImageView"
    android:layout_marginRight="3dp"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="7dp"
    android:id="@+id/iv_item_fragment_yishangjia"
    android:layout_width="50dp"
    android:layout_toRightOf="@id/rbtn_item_fragment_yishangjia"
    android:layout_height="57dp"/>
    <TextView
        android:id="@+id/tv_item_fragment_yishangjia_name"
        style="@style/normalTextView"
        android:textSize="12dp"
        android:layout_toRightOf="@id/iv_item_fragment_yishangjia"
        android:layout_alignTop="@id/iv_item_fragment_yishangjia"
        android:text="weiwe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textSize="9dp"
        style="@style/normalTextView"
        android:layout_below="@id/tv_item_fragment_yishangjia_name"
        android:layout_toRightOf="@id/iv_item_fragment_yishangjia"
        android:id="@+id/tv_item_fragment_yishangjia_num_title"
        android:text="商品编号:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textSize="9dp"
        style="@style/normalTextView"
        android:layout_below="@id/tv_item_fragment_yishangjia_name"
        android:layout_toRightOf="@id/tv_item_fragment_yishangjia_num_title"
        android:id="@+id/tv_item_fragment_yishangjia_num"
        android:text="E2017645646"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textSize="9dp"
        style="@style/normalTextView"
        android:layout_below="@id/tv_item_fragment_yishangjia_num_title"
        android:layout_toRightOf="@id/iv_item_fragment_yishangjia"
        android:id="@+id/tv_item_fragment_yishangjia_time_title"
        android:text="上架时间:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textSize="9dp"
        style="@style/normalTextView"
        android:layout_below="@id/tv_item_fragment_yishangjia_num_title"
        android:layout_toRightOf="@id/tv_item_fragment_yishangjia_time_title"
        android:id="@+id/tv_item_fragment_yishangjia_time"
        android:text="E2017645646"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:text="￥ 888"
        android:textColor="@color/colorRed"
        android:id="@+id/tv_item_fragment_yishangjia_price"
        android:layout_below="@id/tv_item_fragment_yishangjia_time"
        android:layout_toRightOf="@id/iv_item_fragment_yishangjia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btn_item_fragment_yishangjia_process"
        android:layout_alignParentRight="true"
        android:text="下架"
        android:textSize="12dp"
        android:background="@color/colorRed"
        android:layout_width="40dp"
        android:layout_height="match_parent"/>
    <TextView
        style="@style/normalTextView"
        android:layout_toLeftOf="@id/btn_item_fragment_yishangjia_process"
        android:id="@+id/tv_item_fragment_yishangjia_reason"
        android:layout_width="40dp"
        android:layout_height="match_parent"/>
</RelativeLayout>