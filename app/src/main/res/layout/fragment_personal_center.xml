<?xml version="1.0" encoding="utf-8"?>

<!--个人中心布局-->

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/include_toulayout"/>


    <!--个人中心订单界面-->


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="32dp">

        <TextView
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="我的订单"
            android:textColor="@color/colorNormal"/>
        <ImageView
            android:id="@+id/iv_personnal_fragment_lookfororder2"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="5dp"
            android:layout_alignParentRight="true"
            android:scaleType="fitXY"
            android:src="@mipmap/ibtn_personna_look_order"/>

        <TextView
            android:id="@+id/iv_personnal_fragment_lookfororder1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/iv_personnal_fragment_lookfororder2"

            android:gravity="center_vertical"
            android:text="查看全部订单"
            android:textColor="@color/grey"/>


    </RelativeLayout>

    <!--个人中心表格布局-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:orientation="horizontal">

        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="3dp"
            >

            <ImageView
                android:id="@+id/iv_personnal_daifukuan"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/personal_icon_dfh"/>

            <TextView
                android:textSize="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="待付款"
                android:textColor="@color/colorNormal"/>
        </LinearLayout>

        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="3dp"
            >

            <ImageView
                android:id="@+id/iv_personnal_daifahuo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/personal_wode_uncheck_icon"/>

            <TextView
                android:textSize="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="待发货"
                android:textColor="@color/colorNormal"/>
        </LinearLayout>

        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="3dp"
            >

            <ImageView
                android:id="@+id/iv_personnal_daishouhuo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/personal_icon_dsh"/>

            <TextView
                android:textSize="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="待收货"
                android:textColor="@color/colorNormal"/>
        </LinearLayout>

        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="3dp"
            >

            <ImageView
                android:id="@+id/iv_personnal_yiwancheng"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/personal_icon_ywc"/>

            <TextView
                android:textSize="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="已完成"
                android:textColor="@color/colorNormal"/>
        </LinearLayout>

        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="3dp"
            >

            <ImageView
                android:id="@+id/iv_personnal_tuihuanhuo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/personal_icon_thh"/>

            <TextView
                android:textSize="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="退换货"
                android:textColor="@color/colorNormal"/>
        </LinearLayout>

    </LinearLayout>


    <!--个人中心列表-->
    <android.support.v7.widget.RecyclerView

        android:id="@+id/rv_personal_center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>


</LinearLayout>

</ScrollView>