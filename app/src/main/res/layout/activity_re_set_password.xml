<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_regist"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.yumao.yumaosmart.activity.RegistActivity">
    <include layout="@layout/item_toolbar"></include>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_margin="10dp"
            android:scaleType="fitXY"
            android:src="@mipmap/activity_login_logo"
            android:layout_centerInParent="true"
            android:layout_width="220dp"
            android:layout_height="66dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:background="@drawable/shap_line"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_width="280dp"
        android:layout_height="40dp">
        <ImageView
            android:src="@mipmap/activity_regist_phone"
            android:layout_width="30dp"
            android:layout_height="match_parent"/>
        <EditText
            android:background="@null"
            android:hint="请输入手机号"
            android:textColorHint="@color/hint_gray"
            android:id="@+id/et_activity_reset_username"
            android:layout_marginLeft="30dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </RelativeLayout>
    <RelativeLayout
        android:background="@drawable/shap_line"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_width="280dp"
        android:layout_height="40dp">
        <ImageView
            android:src="@mipmap/activity_regist_testcode"
            android:layout_width="30dp"
            android:layout_height="match_parent"/>

        <EditText
            android:background="@null"
            android:hint="验证码"
            android:textColorHint="@color/hint_gray"
            android:id="@+id/et_activity_reset_testcode"
            android:layout_marginLeft="30dp"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"/>

        <TextView
            android:id="@+id/btn_activity_reset_gettestcode"
            android:layout_alignParentRight="true"
            android:text="获取短信验证码"
            android:padding="5dp"
            android:textColor="@color/colorPrimary"
            android:background="@drawable/shap_ring_gray"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:enabled="false"/>
    </RelativeLayout>
    <RelativeLayout
        android:background="@drawable/shap_line"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_width="280dp"
        android:layout_height="40dp">
        <ImageView
            android:src="@mipmap/activity_login_password"
            android:layout_width="30dp"
            android:layout_height="match_parent"/>

        <EditText
            android:inputType="textPassword"
            android:lines="1"
            android:background="@null"
            android:hint="请输入6-16位密码"
            android:textColorHint="@color/hint_gray"
            android:id="@+id/et_activity_reset_password"
            android:layout_marginLeft="30dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>

    <Button
        android:id="@+id/btn_activity_reset_finishregist"
        android:text="重置密码"
        android:textColor="@color/colorLight"
        android:background="@drawable/shap_ring"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="17dp"
        android:layout_width="280dp"
        android:layout_height="40dp"/>
</LinearLayout>
