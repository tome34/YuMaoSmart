<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <include layout="@layout/item_toolbar"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:src="@mipmap/activity_login_logo"
        android:layout_centerInParent="true"
        android:layout_width="220dp"
        android:layout_height="66dp"/>
</RelativeLayout>
    <RelativeLayout
        android:background="@drawable/shap_line"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_width="280dp"
        android:layout_height="40dp">
        <ImageView
            android:background="@drawable/shape_logo"
            android:src="@mipmap/activity_login_username"
            android:layout_width="30dp"
            android:layout_height="match_parent"/>
        <EditText
            android:background="@null"

            android:hint="请输入用户名"

            android:id="@+id/et_activity_lonin_username"
            android:layout_marginLeft="30dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </RelativeLayout>
    <RelativeLayout
        android:background="@drawable/shap_line"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="17dp"
        android:layout_width="280dp"
        android:layout_height="40dp">
        <ImageView

            android:src="@mipmap/activity_login_password"
            android:layout_width="30dp"
            android:layout_height="match_parent"/>
        <EditText
            android:lines="1"
            android:inputType="textPassword"
            android:background="@null"
            android:hint="请输入密码"
            android:id="@+id/et_activity_lonin_password"
            android:layout_marginLeft="30dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </RelativeLayout>

    <Button
        android:id="@+id/btn_activity_login"
        android:text="登录"
        android:textColor="@color/colorLight"
        android:background="@drawable/shap_ring"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="17dp"
        android:layout_width="280dp"
        android:layout_height="40dp"/>

    <RelativeLayout
        android:gravity="center_vertical"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_width="280dp"
        android:layout_height="40dp">
         <TextView
         android:id="@+id/tv_activity_login_quikly_login"
         android:text="快速注册"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_activity_login_forget_password"
            android:layout_alignParentRight="true"
            android:text="忘记密码"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_weight="0"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text=" ------------------------------- 第三方登录 ------------------------------- "
            android:maxLines="1"/>
        <ImageView
            android:id="@+id/wx_login"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:src="@mipmap/wx_xxh"/>

    </LinearLayout>
</LinearLayout>